template(name="page")
  // ==================================================
  //  APP MAIN PAGE
  //  List of Trashes
  // ==================================================
  //- App Header Main Page
  .app-header
    //- Marker anchor for map
    a.goto-map(href="#" style="")
      i.icon.marker

    //- Clean Jeju Logo
    img(src="/img/logo_white.png")

    //- + icon upload photo
    #upload-photo
      if currentUser
        input(type="file")
      button.btn.btn-primary
        i.icon.add

  .page-container.scrollable
    //- Each Posts (Trashes)
    +each Trashes
      .page-item
        .page-header.followMeBar
          .left
            span.avatar
            span.username {{createdUserName}}
          .right
            span.date {{moFromNow createdAt withoutSuffix}}

        .page-body
          //- Image Wrapper
          .img-wrapper
            img(src="{{imageUrl}}")

          //- Below Photo
          .body-inner
            //- Action Bar
            .list-actions
              a(href="#" data-action="show-comment" data-target="{{_id}}")
                i.ion-chatboxes
              a(href="#" data-action="show-map" data-target="{{_id}}")
                i.ion-map
              if lgtm
                a(href="#" style="pointer-events:none;")
                  i.ion-ribbon-b
                  | {{lgtm}}
            .contents
              span.description {{description}}



  // ==================================================
  //  COMMENTS PAGE
  //  List of Comments
  // ==================================================
  .page-comments
    //- App Header Comments Page
    .app-header
      //- Goes back to main page
      a.goto-list
        i.icon.arrow.left

      //- Comments Title
      h3 쓰레기 연대기

      //- Fake hidden anchor for alignment
      a(style="visibility: hidden;")
        i.icon.arrow.left

    ul.comments
      +each comments
        li
          .profile
          .group
            .inner
              .username
                | {{createdUserName}}
                span {{moFromNow createdAt withoutSuffix}}
              if imageUrl
                .comment-lgtm(class="{{checkedClass}}")
                  i.ion-ribbon-b
                  span {{lgtm}}
            if description
              .desc
                | {{description}}
            if imageUrl
              .comment-img
                img(src="{{imageUrl}}")




    .bottom-bar
      textarea.comment-text
      button.comment-submit
        i.icon.add

      if currentUser
        button.comment-photo
          input#upload-comment-photo(type="file")
          i.icon.camera


  .map-container
    .app-header
      //- Marker anchor for map
      a.close-map(href="#" style="")
        i.icon.arrow.left

      //- Clean Jeju Logo
      img(src="/img/logo_white.png")

      //- Marker anchor for map
      a(href="#" style="visibility: hidden;")
        i.icon.marker
    +map
