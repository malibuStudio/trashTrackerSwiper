template(name="page")
    +HammerTouchArea(gestureMap=gestures)
    .swiper-container
      // UI Components (Menu)
      .page-ui-components#ui-wrapper
        #upload-photo
          if currentUser
            input(type="file")
          button.btn Upload

      .swiper-wrapper
        +each Trashes
          .swiper-slide
            //- .page-inner
            .page-main
              .img-wrapper
                img(src="{{imageUrl}}")
            .page-comments(data-scroll-speed="3")
              .comment-submit
                textarea(rows="3")
                //- button.btn-primary.btn-comment-submit
                  i.icon.plus
              +each comments
                h1  {{description}}
